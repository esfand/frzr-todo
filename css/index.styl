
@import 'nib'

*
  margin: 0
  padding: 0
  border: 0
  outline: 0
  box-sizing: border-box

input, button
  background: none
  font: inherit

body
  background-color: #eee
  padding: 3rem

h1, h2
  font-family: Cabin, sans-serif

p, li, input, button
  font-family: Roboto, sans-serif

h1, h2, p
  margin-bottom: 1.5rem

h1
  font-weight: 600

h2
  font-weight: 500

input
  margin-right: .5rem
  padding: .75rem
  background-color: #fff
  box-shadow: 0 1px 2px rgba(#000, .15)

  &:hover, &:focus
    box-shadow: 0 1px 2px rgba(#000, .3)

button
  margin-right: .5rem
  padding: .75rem 1rem
  color: hsl(210, 75, 50)
  box-shadow: inset 0 0 0 2px hsl(210, 75, 50), 0 1px 2px rgba(#000, .15)
  cursor: pointer

  &:hover, &:focus
    background-color: hsl(210, 75, 50)
    color: #fff
    box-shadow: inset 0 0 0 2px hsl(210, 75, 50), 0 1px 2px rgba(#000, .3)

li
  list-style: none
  padding: .75rem 0
  cursor: pointer

  input
    cursor: inherit

form
  display: inline-block
  padding-bottom: .75rem

.todoitem
  input:checked + span
    text-decoration: line-through

@import 'https://fonts.googleapis.com/css?family=Cabin:400,500,400italic,500italic,600,600italic|Roboto:400,400italic'
